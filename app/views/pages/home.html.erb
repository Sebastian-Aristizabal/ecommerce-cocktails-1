<div class="hero-section">
    <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
          <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
          <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
          <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
          <div class="carousel-item active">
            <%= image_tag "smoothie1", alt:"", class:"d-block w-100" %>
          </div>
          <div class="carousel-item">
            <%= image_tag "smoothie2", alt:"", class:"d-block w-100" %>
          </div>
          <div class="carousel-item">
            <%= image_tag "smoothie3", alt:"", class:"d-block w-100" %>
          </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
</div>

<div class="section-container">
    <div class="section-discount">

        <h2 class="discount-subtitle">Discounts</h2>
        <div class="discount-cocktails">

          <% @discounted_cocktails.each do |cocktail| %>
            <div class="card-discount">
              <%= link_to cocktail_path(cocktail) do %>
                  <%=image_tag(cocktail.photo, class:"discount-cocktails")%>

                <% if !cocktail.status %>
                  <div class="sold-out">
                      <p>Sold-out</p>
                  </div>
                <%elsif cocktail.discount > 0 %>
                  <div class="get-off">
                      <p><%= cocktail.discount.to_i %>% off</p>
                  </div>
                <% else %>
                <% end %>

                  <div class="card-info-discount">
                      <h3 class="subtitle"><%= cocktail.name %></h3>
                      <p class="paragraph"><%= cocktail.description %></p>
                          <div class="itemp">
                            <% if !cocktail.status %>
                              <p class="price">$<%= cocktail.price %>
                            <%elsif cocktail.discount > 0 %>
                              <p class="price">$<%= cocktail.price %></p>......................................
                              <p class="new-price">$<%= (cocktail.price * (1 - cocktail.discount/100)).round(2) %></p>
                            <% else %>
                              <p class="price">$<%= cocktail.price %>
                            <% end %>
                          </div>
              <% end %>
                        <%= link_to "Add cart", root_path, class: "buy-btn" %>
                </div>
            </div>
          <% end %>
        </div>
    </div>

